<!DOCTYPE HTML>
<html>
  <head>
    <title>Home Page</title>
    <link rel="stylesheet" href="/public/css/styles.css"/>
  </head>

  <body>

    {{#if errors}}
      {{#each errors}}
        <div class = "alert alert-danger">
          <strong>{{msg}}</strong>
        </div>
      {{/each}}
    {{/if}}
    <h2>Account Login</h2>
    
    <form method = "post" action = "/faculty_dashboard">
      <div class="form-group">
        <label>Username</label>
        <input type="text" placeholder="Enter Username" class="form-control" name="unm">
      </div>

      <div class="form-group">
        <label>Password</label>
        <input type="password" placeholder="Enter Password" class="form-control" name="pwd">
      </div>

      <center><button type="submit" class="btn btn-primary">Login</center>
    </form>
  </body>
</html>